@model IEnumerable<ComplexModelExample.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="page-header">
    <h3>Manage Products @Html.ActionLink("Create New", "Create", null, new { @class = "pull-right btn btn-success" })</h3>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>Associate Categories 
        </th>
        
        <th>Associate Students 
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @if (item.Categories != null && item.Categories.Count() > 0)
                {
                    
                    <ul class="nav nav-pills" style="margin-bottom: 0px !important;">

                        <li class="dropdown active">
                            <a class="dropdown-toggle btn-info"  role="button" data-toggle="dropdown" href="#">see Category <b class="caret"></b></a>
                            <ul  class="dropdown-menu" role="menu">
                                @foreach (var itemInner in item.Categories)
                                {
                                    <li role="presentation"><a href="#">@itemInner.CategoryName</a></li>

                                }
                           
                            </ul>
                        </li>
                    </ul>
                    
                }
                else
                {
                    <p>No Categories</p>
                }
            </td>
            
            <td>
                @if (item.Students != null && item.Students.Count() > 0)
                {
                    
                    <ul class="nav nav-pills" style="margin-bottom: 0px !important;">

                        <li class="dropdown active">
                            <a class="dropdown-toggle btn-danger"  role="button" data-toggle="dropdown" href="#">see Students <b class="caret"></b></a>
                            <ul  class="dropdown-menu" role="menu">
                              @foreach (var itemInner in item.Students)
                                {
                                    <li role="presentation"><a href="#">@itemInner.studentname</a></li>

                                }
                           
                            </ul>
                        </li>
                    </ul>
                    
                  
                    
                }
                else
                {
                    <p>No student have this product</p>
                }
            </td>
            <td>
                <ul class="nav nav-pills" style="margin-bottom: 0px !important;">

                    <li class="dropdown active">
                        <a class="dropdown-toggle" id="drop5" role="button" data-toggle="dropdown" href="#">Action <b class="caret"></b></a>
                        <ul id="menu3" class="dropdown-menu" role="menu" aria-labelledby="drop5">
                            <li role="presentation">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                            <li role="presentation">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                        </ul>
                    </li>
                </ul>
            </td>
        </tr>
    }

</table>
