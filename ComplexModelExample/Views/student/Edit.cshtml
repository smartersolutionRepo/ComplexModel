@model ComplexModelExample.Models.studentviewmodel

@{
    ViewBag.Title = "Edit";
}

<style>
    label {
display: initial;
margin-bottom: 5px;
margin-top: 8px;
margin-left: 4px;
}
    input[type="checkbox"]
    {margin: 0px;}
</style>

<h3>Update @Html.DisplayFor(model=>model.studentname)'s Record <small>@DateTime.Now.ToString("MMM dd y")</small></h3>

<hr />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
       

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.studentname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.studentname)
            @Html.ValidationMessageFor(model => model.studentname)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.studentclass)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.studentclass)
            @Html.ValidationMessageFor(model => model.studentclass)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Age)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Age)
            @Html.ValidationMessageFor(model => model.Age)
        </div>

        <div class="editor-label">
        Select Customer
        </div>
        <div class="editor-field">
           @Html.EditorFor(model => model.customerID)
            @Html.ValidationMessageFor(model => model.customerID)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.products)
        </div>
        <div class="editor-field">
            @Html.CheckBoxListFor(model => model.products, (MultiSelectList) ViewBag.Products)
         
        </div>
        <hr />

        <p>
            <input type="submit" value="Update" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
