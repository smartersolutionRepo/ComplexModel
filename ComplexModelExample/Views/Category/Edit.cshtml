@model ComplexModelExample.Models.CategoryViewModel

@{
    ViewBag.Title = "Edit";
}
<style>
    label {
display: initial;
margin-bottom: 5px;
margin-top: 8px;
margin-left: 4px;
}
    input[type="checkbox"]
    {margin: 0px;}
</style>

<h3>Edit</h3>
<hr />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
       

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CatDesc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CatDesc)
            @Html.ValidationMessageFor(model => model.CatDesc)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.Products)
        </div>
        <div class="editor-field">
            @Html.CheckBoxListFor(model => model.Products, (MultiSelectList) ViewBag.Products)
            @Html.ValidationMessageFor(model => model.CatDesc)
        </div>
        <hr />
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
